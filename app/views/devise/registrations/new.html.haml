%h1 My Tasks
.block#block-signup
  %h2 Sign up
  .content
    .flash
      - flash.each do |type, message|
        %div{ :class => "message #{type}" }
          %p= message
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form" }) do |f|
      .group
        = f.label :nickname, :class => "label"
        = f.text_field :nickname, :class => "text_field"
        %span.description Your Nickname
      .group
        = f.label :email, :class => "label"
        = f.text_field :email, :class => "text_field"
        %span.description Ex. test@example.com
      .group
        = f.label :password, :class => "label"
        = f.password_field :password, :class => "text_field"
        %span.description must be at least 6 characters
      .group
        = f.label :password_confirmation, "Re-enter Password", :class => "label"
        = f.password_field :password_confirmation, :class => "text_field"
      .group  
        = f.label :usertype_id, t("activerecord.attributes.activity.usertype_id", :default => "User Type"), :class => :label
        = f.collection_select(:usertype_id, UserType.all, :id, :name, :prompt => true ,:class => 'number_field')
        %span.description Select One

      .group.navform.wat-cf
        %button.button{ :type => "submit" }
          = image_tag "web-app-theme/icons/tick.png"
          Sign up 
    = render :partial => "devise/shared/links"
