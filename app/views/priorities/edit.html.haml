.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", priorities_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_priority_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_priority_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Priority
    .inner
      = form_for @priority, :url => priority_path(@priority), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
