.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", priorities_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_priority_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", priority_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.priority.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @priority.name
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_priority_path(@priority), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), priority_path(@priority), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
