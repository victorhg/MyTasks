.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", appconfigs_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_appconfig_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", appconfig_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.appconfig.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @appconfig.description
      %p
        %b
          = t("activerecord.attributes.appconfig.value", :default => t("activerecord.labels.value", :default => "Value"))
          \:
        = @appconfig.value
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_appconfig_path(@appconfig), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), appconfig_path(@appconfig), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
