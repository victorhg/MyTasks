#block-text.block
  .content
    %h2.title Home
    
    %h2.title Your Activities
    .inner
      %p.first
        = show_activity_count @activity_count

    .inner
      - if @activity_count > 0
        %p.first
          %table.table
            %tr
              %th.first Status
              %th.last Quantity
            - @activity_hash.each do |status, list|
              %tr
                %td
                  = status
                %td
                  = list.size.to_s

    %h2.title Activities Ending Today
    .inner
      %p.first
        = show_activities_end_today_count @activities_end_today.size

    .inner
      - if @activities_end_today.size > 0
        %p.first
          %table.table
            %tr
              %th.first Name
              %th.first Status
              %th.last Priority
            - @activities_end_today.each do |activity|
              %tr
                %td
                  = activity.name
                %td
                  = activity.status.name
                %td
                  = activity.priority.name

    %h2.title Late Activities
    .inner
      %p.first
        = show_late_activities @activities_late.size

    .inner
      - if @activities_late.size > 0
        %p.first
          %table.table
            %tr
              %th.first Name
              %th.first Status
              %th.first Priority
              %th.last End Date
            - @activities_late.each do |activity|
              %tr
                %td
                  = activity.name
                %td
                  = activity.status.name
                %td
                  = activity.priority.name
                %td 
                  = show_date_time activity.enddate
            

- content_for :sidebar, render(:partial => 'sidebar')
