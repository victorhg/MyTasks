.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", activities_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_activity_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", activity_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.activity.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @activity.name

      %p
        %b
          = t("activerecord.attributes.activity.initialdate", :default => t("activerecord.labels.initialdate", :default => "Initialdate"))
          \:
        =h show_date_time @activity.initialdate

      %p
        %b
          = t("activerecord.attributes.activity.enddate", :default => t("activerecord.labels.enddate", :default => "Enddate"))
          \:
        =h show_date_time @activity.enddate

      %p
        %b
          = t("activerecord.attributes.activity.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:

      %p
        %textarea{:cols => "70", :rows => "20", :wrap => "hard", :disabled => "disbled"}= @activity.description

      %p
        %b
          = t("activerecord.attributes.activity.status_id", :default => t("activerecord.labels.status_id", :default => "Status"))
          \:
        = @activity.status.name

      %p
        %b
          = t("activerecord.attributes.activity.priority_id", :default => t("activerecord.labels.priority_id", :default => "Priority"))
          \:
        = @activity.priority.name


      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_activity_path(@activity), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), activity_path(@activity), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
