.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", activities_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_activity_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_activity_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Activity
    .inner
      = form_for @activity, :url => activity_path(@activity), :html => { :class => :form } do |f|
        .group
          = f.label :enddate, t("activerecord.attributes.activity.enddate", :default => "Enddate"), :class => :label
          = f.datetime_select :enddate, :class => 'datetime_select'
          %span.description Ex: a simple text
        .group
          = f.label :description, t("activerecord.attributes.activity.description", :default => "Description"), :class => :label
          = f.text_area :description, :class => 'text_area'
          %span.description Ex: a simple text
        .group
          = f.label :status_id, t("activerecord.attributes.activity.status_id", :default => "Status"), :class => :label
          = f.collection_select(:status_id, Status.all, :id, :name, :prompt => true ,:class => 'number_field')
          %span.description Ex: a simple text
        .group
          = f.label :priority_id, t("activerecord.attributes.activity.priority_id", :default => "Priority"), :class => :label
          = f.collection_select(:priority_id, Priority.all, :id, :name, :prompt => true ,:class => 'number_field')
          %span.description Ex: a simple text
        .group.navform.wat-cf
          %button.button{:type => "submit"}
            = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
            = t("web-app-theme.save", :default => "Save")
          %span.text_button_padding= t("web-app-theme.or", :default => "or")
          = link_to t("web-app-theme.cancel", :default => "Cancel"), activities_path, :class => "text_button_padding link_button"    
- content_for :sidebar, render(:partial => 'sidebar')
